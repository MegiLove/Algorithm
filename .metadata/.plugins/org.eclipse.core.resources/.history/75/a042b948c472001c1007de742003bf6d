package com.sist.algo;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Stack;
import java.util.Scanner;
public class queue {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=0;
		int cnt=0;
		Scanner sc= new Scanner(System.in);
		System.out.println("빌딩 개수를 입력하세요");
		n= sc.nextInt();
		if(n>=1 && n<=80000) {
			int []h= new int[80000];
			for(int i=0; i<=n-1; i++){
				System.out.println("각 빌딩의 높이들을 입력하세요");
				h[i]=sc.nextInt();
				int k=i+1;
				if(h[i]>h[k]) {
					cnt=cnt+1;
					k=k+1;
				}else {
					break;	
				}i++;				
			}
		}
		
		System.out.println("각 빌딩의 합은"+cnt+"이다");
		

	}

}
